---
import BaseLayout from './BaseLayout.astro';
import { formatDate, formatMonth, getRelativeTime } from '../utils/dates';

interface TimelineEntry {
  slug: string;
  title: string;
  date: Date;
  excerpt?: string;
  href: string;
}

interface Props {
  title: string;
  description: string;
  entries: TimelineEntry[];
  basePath: string; // e.g., '/now' or '/uses'
}

const { title, description, entries, basePath } = Astro.props;

// Sort entries by date, newest first
const sortedEntries = entries.sort((a, b) => b.date.getTime() - a.date.getTime());
---

<BaseLayout title={title} description={description}>
  <main class="max-w-4xl mx-auto px-6 py-24">
    <header class="mb-16 animate-fade-in">
      <h1 class="text-4xl md:text-5xl font-heading mb-4 text-base-content">{title}</h1>
      <p class="text-xl text-base-content/70">{description}</p>
    </header>

    <div class="relative">
      <!-- Vertical line -->
      <div class="absolute left-0 md:left-1/2 top-0 bottom-0 w-px bg-base-content/10 transform md:translateX(-1/2)"></div>

      <div class="space-y-12">
        {sortedEntries.map((entry, index) => (
          <div class={`relative flex flex-col md:flex-row items-center ${index % 2 === 0 ? 'md:flex-row-reverse' : ''} animate-fade-up`}>
            <!-- Dot -->
            <div class="absolute left-0 md:left-1/2 w-3 h-3 bg-accent-500 rounded-full transform -translate-x-1/2 z-10 hidden md:block"></div>
            
            <div class="w-full md:w-1/2 px-8">
              <a href={entry.href} class="block frosted-card p-6 h-full hover:scale-[1.02] transition-all duration-300">
                <div class="flex justify-between items-start mb-2">
                  <time class="text-sm font-semibold uppercase tracking-wider text-accent-500">
                    {formatDate(entry.date)}
                  </time>
                  <span class="text-xs font-mono opacity-40">{getRelativeTime(entry.date)}</span>
                </div>
                <h2 class="text-2xl font-heading text-base-content mb-3">{entry.title}</h2>
                {entry.excerpt && (
                  <p class="text-base-content/70 leading-relaxed text-sm line-clamp-3">{entry.excerpt}</p>
                )}
                <span class="inline-flex items-center mt-4 text-sm font-medium text-accent-500 hover:text-accent-600 transition-colors">
                  Read more
                  <svg class="w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </span>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Footer note -->
    <footer class="mt-20 pt-10 border-t border-base-content/10 text-center">
      <p class="text-base-content/50 text-sm">
        {basePath === '/now' && (
          <>Inspired by <a href="https://nownownow.com/about" target="_blank" rel="noopener" class="text-accent-500 hover:text-accent-600 underline decoration-accent-500/30">nownownow.com</a></>
        )}
        {basePath === '/uses' && (
          <>Inspired by <a href="https://uses.tech" target="_blank" rel="noopener" class="text-accent-500 hover:text-accent-600 underline decoration-accent-500/30">uses.tech</a></>
        )}
      </p>
    </footer>
  </main>
</BaseLayout>

<style>
  /* Base transitions and animations handled by utility classes */
</style>

