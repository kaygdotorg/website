---
interface Props {
    name:
        | "sun"
        | "moon"
        | "search"
        | "arrow"
        | "hamburger"
        | "close"
        | "github"
        | "twitter"
        | "email"
        | "arrow-down"
        | "arrow-up";
    class?: string;
    strokeWidth?: number;
    id?: string;
}

const { name, class: className = "", strokeWidth = 1.5, id } = Astro.props;

const icons: Record<string, string> = {
