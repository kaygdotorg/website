---
/**
 * InProgressCard Component
 *
 * Displays a "work in progress" card when a page's content is not yet ready.
 * Used when frontmatter has `display-in-progress: true`.
 *
 * This component should be integrated in any page/layout that needs to
 * support the in-progress feature. The check for display-in-progress
 * should be done in the parent page/layout.
 *
 * Usage:
 * {entry.data["display-in-progress"] ? (
 *   <InProgressCard title={entry.data.title} />
 * ) : (
 *   <ActualContent />
 * )}
 */
interface Props {
    /** Page title to display */
    title?: string;
    /** Optional message to show */
    message?: string;
}

const {
    title = "This Page",
    message = "I'm currently working on this section. Check back soon for updates!",
} = Astro.props;
---

<div class="min-h-[50vh] flex items-center justify-center px-6 py-16">
    <div
        class="frosted-card max-w-xl w-full p-8 md:p-12 text-center animate-fade-up"
    >
        {/* Static icon */}
        <div
            class="w-20 h-20 mx-auto mb-8 rounded-full bg-accent/10 flex items-center justify-center"
        >
            <svg
                class="w-10 h-10 text-accent"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437l1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008z"
                ></path>
            </svg>
        </div>

        {/* Title */}
        <h2 class="text-2xl md:text-3xl font-display mb-4 gradient-text">
            Work in Progress
        </h2>

        {/* Message */}
        <p class="text-base-content/60 leading-relaxed mb-8">
            {message}
        </p>

        {/* Static progress bar at 50% */}
        <div
            class="w-full h-1 bg-base-content/10 rounded-full overflow-hidden mb-8"
        >
            <div class="h-full w-1/2 bg-accent rounded-full"></div>
        </div>

        {/* Back link */}
        <a
            href="/"
            class="inline-flex items-center gap-2 text-sm text-base-content/50 hover:text-accent transition-colors"
        >
            <svg
                class="w-4 h-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Return home
        </a>
    </div>
</div>
