---
interface Props {
    experience: any[];
    resumeUrl?: string;
}

const { experience, resumeUrl } = Astro.props;
---

<section class="experience-section">
    <div class="experience-container">
        <div class="experience-header">
            <div class="experience-header-content">
                <span class="experience-header-label">Career</span>
                <h2 class="experience-header-title">Work Experience</h2>
            </div>
            {
                resumeUrl && (
                    <a
                        href={resumeUrl}
                        class="resume-button glass-pill"
                        download
                    >
                        <span>Resume</span>
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M4 16v1a2 2 0 002 2h12a2 2 0 002-2v-1M7 10l5 5m0 0l5-5m-5 5V3"
                            />
                        </svg>
                    </a>
                )
            }
        </div>

        <div class="experience-timeline">
            <!-- Central Line -->
            <div class="timeline-line"></div>

            {
                experience?.map((exp: any) => (
                    <div class="experience-item">
                        <div class="experience-dot-wrapper">
                            <div
                                class:list={[
                                    "experience-dot",
                                    exp.isCurrent ? "current-dot" : "",
                                ]}
                            />
                        </div>
                        <div class="experience-content">
                            <div class="experience-info">
                                <h3 class="experience-role">{exp.role}</h3>
                                <div class="experience-company-wrapper">
                                    <span class="experience-company">
                                        {exp.company}
                                    </span>
                                </div>
                            </div>
                            <div class="experience-time">
                                <span class="experience-date">
                                    {exp.startDate} â€” {exp.endDate}
                                </span>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
