---
import MarkdownLayout from "../layouts/MarkdownLayout.astro";
import { getCollection } from "astro:content";

// Use getCollection and filter for index.md - more reliable than getEntry
const allEntries = await getCollection("homelab");
const entry = allEntries.find((e) => e.id === "index.md");

if (!entry) {
    throw new Error("Could not find index.md in src/content/homelab/");
}

const { Content } = await entry.render();

// Calculate reading time
const wordCount = entry.body?.split(/\s+/).length || 0;
const readingTime = Math.max(1, Math.ceil(wordCount / 200));
---

<MarkdownLayout
    title={entry.data.title}
    entry={entry}
    createdDate={entry.data.date}
    lastEdited={entry.data["last edited"]}
    readingTime={readingTime}
    coverImage={entry.data["cover-image"]}
>
    <Content />
</MarkdownLayout>
