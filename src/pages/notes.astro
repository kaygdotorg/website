---
import BaseLayout from "../layouts/BaseLayout.astro";
import Icon from "../components/Icon.astro";
import TagFilter from "../components/TagFilter.astro";
import { getCollection } from "astro:content";
import { formatDate } from "../utils/dates";

// Get all notes, exclude drafts, sort by date
const allNotes = await getCollection("notes", ({ data }) => !data.draft);
const notes = allNotes.sort(
    (a, b) => b.data.date.getTime() - a.data.date.getTime(),
);

// Get unique tags
const allTags = [
    ...new Set(notes.flatMap((note) => note.data.tags || [])),
].sort();
---

<BaseLayout
    title="Notes"
    description="Smaller, less polished thoughts and digital garden entries"
>
    <section class="max-w-4xl mx-auto px-4 md:px-6 py-12 md:py-24">
        <!-- Header -->
        <header class="mb-12 max-w-2xl animate-fade-up">
            <h1 class="font-display text-4xl md:text-5xl mb-4 gradient-text">
                Notes
            </h1>
            <p class="text-base-content/70 text-lg leading-relaxed">
                {notes.length} notes on various topics, ideas, and fragments of thoughts.
            </p>
        </header>

        <!-- Tag Filters -->
        <TagFilter
            tags={allTags.slice(0, 10).map((tag) => ({
                tag,
                count: notes.filter((n) => n.data.tags?.includes(tag)).length,
            }))}
            totalCount={notes.length}
            cardSelector=".note-card"
        />

        <!-- Notes List -->
        <div class="space-y-6">
            {
                notes.map((note, index) => (
                    <article
                        class="note-card frosted-card p-6 rounded-2xl glow-hover transition-all animate-fade-up"
                        data-tags={JSON.stringify(note.data.tags || [])}
                        style={`animation-delay: ${Math.min(index * 0.05, 0.5)}s`}
                    >
                        <a
                            href={`/notes/${note.data.slug || note.slug}`}
                            class="block group"
                        >
                            <div class="flex flex-col md:flex-row md:items-start gap-4">
                                {/* Feature Image */}
                                {note.data.image && (
                                    <div class="w-full md:w-32 h-24 md:h-20 rounded-lg overflow-hidden flex-shrink-0">
                                        <img
                                            src={note.data.image}
                                            alt={note.data.title}
                                            class="w-full h-full object-cover transition-transform group-hover:scale-105"
                                            loading="lazy"
                                        />
                                    </div>
                                )}

                                {/* Content */}
                                <div class="flex-1 min-w-0">
                                    <h2 class="font-display text-xl font-medium mb-2 group-hover:text-accent transition-colors">
                                        {note.data.title}
                                    </h2>

                                    {note.data.description && (
                                        <p class="text-base-content/60 text-sm mb-3 line-clamp-2">
                                            {note.data.description}
                                        </p>
                                    )}

                                    <div class="flex flex-wrap items-center gap-3 text-xs text-base-content/50">
                                        <time
                                            datetime={note.data.date.toISOString()}
                                        >
                                            {formatDate(note.data.date)}
                                        </time>

                                        {note.data.tags &&
                                            note.data.tags.length > 0 && (
                                                <>
                                                    <span>Â·</span>
                                                    <div class="flex flex-wrap gap-1">
                                                        {note.data.tags
                                                            .slice(0, 3)
                                                            .map((tag) => (
                                                                <span class="px-2 py-0.5 rounded-full bg-base-content/5">
                                                                    {tag}
                                                                </span>
                                                            ))}
                                                    </div>
                                                </>
                                            )}
                                    </div>
                                </div>

                                {/* Arrow */}
                                <div class="hidden md:flex items-center opacity-0 group-hover:opacity-100 transition-opacity">
                                    <Icon
                                        name="arrow"
                                        class="w-5 h-5 text-accent"
                                        strokeWidth={2}
                                    />
                                </div>
                            </div>
                        </a>
                    </article>
                ))
            }
        </div>
    </section>

    <style>
        .note-card.hidden {
            display: none;
        }

        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
</BaseLayout>
