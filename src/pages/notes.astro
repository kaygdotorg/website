---
/**
 * Notes List Page (Digital Garden)
 *
 * Displays all notes with tag filtering.
 * Uses ContentCard component for consistent card rendering.
 * Includes "Digital Garden" section label to differentiate from blog.
 */
import BaseLayout from "../layouts/BaseLayout.astro";
import ContentCard from "../components/ContentCard.astro";
import TagFilter from "../components/TagFilter.astro";
import { getCollection } from "astro:content";

// Get index.md for page metadata
const allNotesEntries = await getCollection("notes");
const entry = allNotesEntries.find((e) => e.id === "index.md");

if (!entry) {
    throw new Error("Could not find index.md in src/content/notes/");
}

// Get all notes, exclude drafts and index.md, sort by date
const notes = allNotesEntries
    .filter((e) => e.id !== "index.md" && !e.data.draft)
    .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

// Calculate tag counts for TagFilter
const tagMap = new Map<string, number>();
notes.forEach((note) => {
    (note.data.tags || []).forEach((tag) => {
        tagMap.set(tag, (tagMap.get(tag) || 0) + 1);
    });
});
const tagCounts = Array.from(tagMap, ([tag, count]) => ({ tag, count })).sort(
    (a, b) => b.count - a.count,
);
---

<BaseLayout title={entry.data.title} description={entry.data.description}>
    <section class="max-w-6xl mx-auto px-4 md:px-6 py-12 md:py-24">
        {/* Header */}
        <header class="mb-12 max-w-2xl animate-fade-up">
            <span
                class="text-accent font-medium tracking-widest uppercase text-xs mb-3 block"
            >
                Digital Garden
            </span>
            <h1 class="font-display text-4xl md:text-5xl mb-4 gradient-text">
                {entry.data.title}
            </h1>
            <p class="text-base-content/70 text-lg leading-relaxed">
                {entry.data.description}
            </p>
        </header>

        {/* Tag Filter */}
        <TagFilter
            tags={tagCounts}
            totalCount={notes.length}
            cardSelector=".note-card"
        />

        {/* Notes List */}
        <div class="space-y-6">
            {
                notes.map((note, index) => (
                    <ContentCard
                        entry={note}
                        basePath="/notes"
                        index={index}
                        cardClass="note-card"
                        showTags={true}
                    />
                ))
            }
        </div>
    </section>

    <style>
        .note-card.hidden {
            display: none;
        }
    </style>
</BaseLayout>
