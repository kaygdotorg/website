---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import { formatDateWithComma } from "../../utils/dates";

export async function getStaticPaths() {
    const talks = await getCollection("talks");
    return talks.map((entry) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BaseLayout title={entry.data.title} description={entry.data.description}>
    <main class="max-w-3xl mx-auto px-6 py-24">
        <a
            href="/talks"
            class="inline-flex items-center text-sm font-medium text-accent-500 hover:text-accent-600 mb-12 transition-colors"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4 mr-2"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Talks
        </a>

        <header class="mb-16">
            <time
                class="text-sm font-semibold uppercase tracking-wider text-accent-500 mb-4 block"
            >
                {formatDateWithComma(entry.data.date)}
            </time>
            <h1
                class="text-4xl md:text-5xl font-heading mb-6 text-base-content leading-tight"
            >
                {entry.data.title}
            </h1>
            {
                entry.data.description && (
                    <p class="text-xl text-base-content/70 leading-relaxed italic">
                        {entry.data.description}
                    </p>
                )
            }
        </header>

        <div class="prose prose-lg prose-invert max-w-none">
            <Content />
        </div>
    </main>
</BaseLayout>
