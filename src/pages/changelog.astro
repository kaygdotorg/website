---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getEntry } from "astro:content";

const changelogEntry = await getEntry("pages", "changelog");
const { Content } = await changelogEntry.render();
---

<BaseLayout
    title="Changelog"
    description="A human-readable history of features and fixes for this site."
>
    <section
        class="changelog-page max-w-3xl mx-auto px-4 md:px-6 py-12 md:py-24"
    >
        <header class="mb-12 animate-fade-up">
            <h1 class="font-display text-4xl md:text-5xl mb-4 gradient-text">
                Changelog
            </h1>
            <p class="text-base-content/70 text-lg leading-relaxed">
                A human-readable history of features and fixes for this site.
                Each checkbox represents a completed feature or bugfix.
            </p>
        </header>

        <article
            class="prose prose-invert max-w-none animate-fade-up stagger-1"
        >
            <Content />
        </article>
    </section>

    <style>
        .changelog-page :global(h2) {
            font-family: var(--font-heading, "Playfair Display", serif);
            font-size: 1.75rem;
            font-weight: 500;
            margin-top: 3rem;
            margin-bottom: 1.5rem;
            padding-bottom: 0.75rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            color: var(--fallback-bc, #f8f4fc);
        }

        [data-theme="light"] .changelog-page :global(h2) {
            color: #1a1225;
            border-color: rgba(0, 0, 0, 0.1);
        }

        .changelog-page :global(hr) {
            border: none;
            border-top: 1px solid rgba(255, 255, 255, 0.08);
            margin: 3rem 0;
        }

        [data-theme="light"] .changelog-page :global(hr) {
            border-color: rgba(0, 0, 0, 0.08);
        }

        .changelog-page :global(ul) {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .changelog-page :global(li) {
            position: relative;
            padding: 1rem 0 1rem 2.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            color: var(--fallback-bc, #f8f4fc);
            opacity: 0.85;
            line-height: 1.7;
        }

        [data-theme="light"] .changelog-page :global(li) {
            color: #1a1225;
            border-color: rgba(0, 0, 0, 0.05);
        }

        .changelog-page :global(li:last-child) {
            border-bottom: none;
        }

        /* Checkbox styling */
        .changelog-page :global(li input[type="checkbox"]) {
            position: absolute;
            left: 0;
            top: 1.25rem;
            width: 1.25rem;
            height: 1.25rem;
            accent-color: var(--color-accent-500, #ec4899);
            cursor: default;
            pointer-events: none;
        }

        .changelog-page :global(li strong) {
            color: var(--fallback-bc, #f8f4fc);
            font-weight: 600;
        }

        [data-theme="light"] .changelog-page :global(li strong) {
            color: #1a1225;
        }

        /* Em-dash separator styling */
        .changelog-page :global(li strong + text),
        .changelog-page :global(li) {
            color: var(--fallback-bc, #f8f4fc);
            opacity: 0.7;
        }

        [data-theme="light"] .changelog-page :global(li) {
            color: #1a1225;
        }
    </style>
</BaseLayout>
