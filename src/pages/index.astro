      width: 36px;
      height: 36px;
    }

    .bento-card:hover .bento-icon {
      opacity: 0.5;
      transform: scale(1.1);
    }

    /* ============================================
     * Individual Card Colors - Light Mode
     * Soft pastel backgrounds for a warm, inviting feel
     * ============================================ */

    /* Writing card - Soft coral/peach */
    .bento-writing {
      background: linear-gradient(135deg, #fef3f2 0%, #fce7e6 100%);
      color: #7c2d12;
    }

    /* Photography card - Soft sage green */
    .bento-photography {
      background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
      color: #14532d;
      padding: 0;
    }

    /* Now card - Soft cream/amber */
    .bento-now {
      background: linear-gradient(135deg, #fef9e8 0%, #fef3c7 100%);
      color: #713f12;
    }

    /* Uses card - Now uses image like Photography */
    .bento-uses {
      background: linear-gradient(135deg, #2d2520 0%, #3d3530 100%);
      color: white;
      padding: 0;
    }

    .bento-uses:hover .bento-card-image img {
      transform: scale(1.05);
    }

    /* ============================================
     * Individual Card Colors - Dark Mode
     * Muted, desaturated versions that feel premium
     * ============================================ */
    :root[data-theme="dark"] .bento-writing {
      background: linear-gradient(135deg, #3d2424 0%, #4a2c2c 100%);
      color: #fecaca;
    }

    :root[data-theme="dark"] .bento-photography {
      background: linear-gradient(135deg, #1a2f1a 0%, #22402c 100%);
      color: #bbf7d0;
    }

    :root[data-theme="dark"] .bento-now {
      background: linear-gradient(135deg, #2d2a1f 0%, #3d3623 100%);
      color: #fef3c7;
    }

    /* Uses card - uses image, no dark mode override needed */

    /* ============================================
     * Photography Card Image Handling
     * Full-bleed image with gradient overlay
     * ============================================ */
    .bento-card-image {
      position: absolute;
      inset: 0;
      overflow: hidden;
      border-radius: inherit;
    }

    .bento-card-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.5s ease;
    }

    .bento-photography:hover .bento-card-image img {
      transform: scale(1.05);
    }

    .bento-card-overlay {
      position: relative;
      z-index: 1;
      padding: 1.5rem;
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      background: linear-gradient(
        to top,
        rgba(0, 0, 0, 0.7) 0%,
        rgba(0, 0, 0, 0.2) 50%,
        transparent 100%
      );
      color: white;
    }

    .bento-card-overlay .bento-label {
      color: rgba(255, 255, 255, 0.9);
      opacity: 1;
    }

    /* ============================================
     * Responsive Design
     * Stack cards vertically on mobile
     * ============================================ */
    @media (max-width: 640px) {
      .bento-section {
        padding: 0 1rem 4rem;
      }

      .bento-wrapper {
        padding: 1.5rem;
      }

      .bento-header-title {
        font-size: 1.25rem;
      }

      .bento-grid {
        grid-template-columns: 1fr;
        grid-template-areas:
          "writing"
          "photo"
          "now"
          "uses";
        gap: 0.75rem;
      }

      .bento-card {
        min-height: 120px;
      }

      .bento-tall {
        min-height: 200px;
      }

      .bento-title {
        font-size: 1.1rem;
      }
    }

    /* Footer Section */
    .footer-section {
      padding: 4rem 0 8rem;
      display: flex;
      justify-content: center;
    }

    .footer-card {
      padding: 3rem;
      max-width: 600px;
      text-align: center;
    }

    .footer-quote {
      font-family: var(--font-heading, "Playfair Display", Georgia, serif);
      font-size: 1.5rem;
      font-style: italic;
      color: var(--color-base-content, inherit);
      opacity: 0.8;
      line-height: 1.4;
      letter-spacing: -0.02em;
    }

    .footer-cta {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      margin-top: 2rem;
      color: var(--color-accent, #ec4899);
      font-size: 1rem;
      text-decoration: none;
      transition: gap 0.3s ease;
    }

    .footer-cta:hover {
      gap: 1rem;
    }

    .footer-cta svg {
      width: 1.25rem;
      height: 1.25rem;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .homepage {
        padding: 1rem;
        gap: 3rem;
      }

      .hero-section {
        flex: 1;
      }

      .hero-card {
        padding: 2rem;
      }

      .hero-name {
        font-size: 2.75rem;
      }

      .hero-profile {
        width: 6rem;
        height: 6rem;
      }
    }
  </style>
</BaseLayout>
