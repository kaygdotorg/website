---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import { formatDateWithComma } from "../utils/dates";

const talks = await getCollection("talks");
const sortedTalks = talks.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<BaseLayout title="Talks">
  <main class="max-w-4xl mx-auto px-6 py-24">
    <header class="mb-16 animate-fade-in">
      <h1 class="text-4xl md:text-5xl font-heading mb-4 text-base-content">Talks</h1>
      <p class="text-xl text-base-content/70">Presentation and public speaking history.</p>
    </header>

    <div class="relative">
      <!-- Vertical line -->
      <div class="absolute left-0 md:left-1/2 top-0 bottom-0 w-px bg-base-content/10 transform md:translateX(-1/2)"></div>

      <div class="space-y-12">
        {sortedTalks.map((talk, index) => (
          <div class={`relative flex flex-col md:flex-row items-center ${index % 2 === 0 ? 'md:flex-row-reverse' : ''} animate-fade-up`}>
            <!-- Dot -->
            <div class="absolute left-0 md:left-1/2 w-3 h-3 bg-accent-500 rounded-full transform -translate-x-1/2 z-10 hidden md:block"></div>
            
            <div class="w-full md:w-1/2 px-8">
              <a href={`/talks/${talk.slug}`} class="block frosted-card p-6 hover:scale-[1.02] transition-transform">
                <time class="text-sm font-semibold uppercase tracking-wider text-accent-500 mb-2 block">
                  {formatDateWithComma(talk.data.date)}
                </time>
                <h2 class="text-2xl font-heading text-base-content mb-3">{talk.data.title}</h2>
                <p class="text-base-content/70 leading-relaxed">{talk.data.description}</p>
                <span class="inline-block mt-4 text-sm font-medium text-accent-500 hover:text-accent-600 transition-colors">
                  View presentation â†’
                </span>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </main>
</BaseLayout>
