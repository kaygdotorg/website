---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import { formatDateWithComma } from "../utils/dates";
import { getExcerpt } from "../utils/markdown";

// Use getCollection and filter for index.md - more reliable than getEntry
const allTalksEntries = await getCollection("talks");
const entry = allTalksEntries.find(e => e.id === "index.md");

if (!entry) {
  throw new Error("Could not find index.md in src/content/talks/");
}

const { Content } = await entry.render();

// Filter out index.md which is the landing page, not a talk entry
const talks = allTalksEntries.filter(e => e.id !== "index.md");
const sortedTalks = talks.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<BaseLayout title={entry.data.title} description={entry.data.description}>
  <main class="max-w-4xl mx-auto px-6 py-24">
    <header class="mb-16 animate-fade-in">
      <h1 class="text-4xl md:text-5xl font-heading mb-4 text-base-content">{entry.data.title}</h1>
      <p class="text-xl text-base-content/70">
        {entry.data.description}
      </p>
    </header>


    <div class="relative">
      <!-- Vertical line -->
      <div class="absolute left-0 md:left-1/2 top-0 bottom-0 w-px bg-base-content/10 transform md:translateX(-1/2)"></div>

      <div class="space-y-12">
        {sortedTalks.map((talk, index) => (
          <div class={`relative flex flex-col md:flex-row items-center ${index % 2 === 0 ? 'md:flex-row-reverse' : ''} animate-fade-up`}>
            <!-- Dot -->
            <div class="absolute left-0 md:left-1/2 w-3 h-3 bg-accent-500 rounded-full transform -translate-x-1/2 z-10 hidden md:block"></div>
            
            <div class="w-full md:w-1/2 px-8">
              <a href={`/talks/${talk.slug}`} class="block frosted-card p-6 hover:scale-[1.02] transition-transform group">
                <div class="flex flex-col">
                  {talk.data["cover-image"] && (
                    <div class="w-full mb-6">
                      <div class="aspect-[16/9] rounded-xl overflow-hidden border border-white/10 shadow-lg group-hover:shadow-accent-500/20 transition-all">
                        {typeof talk.data["cover-image"] === 'string' ? (
                          <img src={talk.data["cover-image"]} alt={talk.data.title} class="w-full h-full object-cover" />
                        ) : (
                          <img src={talk.data["cover-image"].src} alt={talk.data.title} class="w-full h-full object-cover" />
                        )}
                      </div>
                    </div>
                  )}
                  <div class="flex-1">
                    <time class="text-sm font-semibold uppercase tracking-wider text-accent-500 mb-2 block">
                      {formatDateWithComma(talk.data.date)}
                    </time>
                    <h2 class="text-2xl font-heading text-base-content mb-3 group-hover:text-accent-500 transition-colors tracking-tight">{talk.data.title}</h2>
                    <p class="text-base-content/70 leading-relaxed text-sm line-clamp-3">{talk.data.description || getExcerpt(talk.body)}</p>
                    <span class="inline-flex items-center mt-4 text-sm font-medium text-accent-500 group-hover:text-accent-600 transition-colors">
                      View presentation â†’
                    </span>
                  </div>
                </div>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </main>
</BaseLayout>
